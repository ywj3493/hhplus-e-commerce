  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prisma:seed": "ts-node prisma/seed.ts",
    "test": "jest",
    "test:unit": "jest --testMatch='**/src/**/*.spec.ts' --testPathIgnorePatterns='integration.spec.ts' --testPathIgnorePatterns='e2e.spec.ts'",
    "test:unit:watch": "jest --watch --testMatch='**/src/**/*.spec.ts' --testPathIgnorePatterns='integration.spec.ts' --testPathIgnorePatterns='e2e.spec.ts'",
    "test:integration": "jest --testMatch='**/test/**/*.integration.spec.ts'",
    "test:e2e": "jest --testMatch='**/test/**/*.e2e.spec.ts'",
    "test:all": "jest --testMatch='**/*.spec.ts'",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.8.1",
  "dependencies": {
    "@nestjs/common": "^11.1.8",
    "@nestjs/core": "^11.1.8",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/platform-express": "^11.1.8",
    "@nestjs/swagger": "^11.2.1",
    "@prisma/client": "^6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/testing": "^11.1.8",
    "@testcontainers/mysql": "^11.8.1",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "9.0.7",
    "jest": "^30.2.0",
    "prisma": "^6",
    "supertest": "^7.1.4",
    "testcontainers": "^11.8.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
